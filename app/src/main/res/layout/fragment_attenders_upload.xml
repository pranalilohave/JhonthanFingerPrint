<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="in.co.ashclan.fragment.AttendersUploadFragment">
    <ListView
        android:id="@+id/attender_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nothing to Display"
        android:textSize="35sp"
        android:visibility="gone"
        android:id="@+id/txt_message"
        android:layout_centerInParent="true"/>
    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/fragment_progress_bar_attender"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="188dp"
        android:visibility="gone"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_upload_attendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="38dp"
        android:scaleType="fitXY"
        android:tint="@android:color/black"
        app:backgroundTint="@color/yellow"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_upload" />

</RelativeLayout>
